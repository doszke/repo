<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/bg</item>
        <item name="android:backgroundTint">@color/bg</item>
    </style>

    <style name="titletextstyle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/andthishappened</item>
        <item name="android:textSize">50sp</item>
    </style>
    <style name="headertextstyle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/andthishappened</item>
        <item name="android:textSize">32sp</item>
    </style>
    <style name="textstyle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/andthishappened</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="btnStyle" parent="@style/TextAppearance.AppCompat.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/andthishappened</item>
        <item name="android:textSize">32sp</item>
    </style>

</resources>
